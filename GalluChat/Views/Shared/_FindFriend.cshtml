@model ApplicationUser

@if(Model!=null)
{        
    <div class="row border-bottom pb-3">
        <div class="d-none d-lg-block col-lg-1 text-center py-2">
              <img src="~/Image/blank-profile-picture-hd-images-photo-5.JPG" class="rounded" width="100%" />
        </div>
        <div class="col-12 col-lg-6 pt-md-3">
               <h5 class="text-uppercase text-secondary"><strong>@Model.Name</strong></h5>
               <p><small>@Model.UserName</small></p>
        </div>
        <div class="col-12  col-lg-5 text-center row">
                <div class="col-3 text-md-right pt-2 pt-md-4">
                                <h6 class="fw-semibold">
                    item.Price.ToString("c")
                                    <span class="text-muted">&nbsp;x&nbsp;</span>item.ProductCount
                                </h6>
                </div>
                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                        <div class="w-75 btn-group" role="group">
                                    <a asp-action="SendInvitation" asp-route-Id="item.Id" class="btn btn-outline-primary bg-gradient py-2">
                                        <i class="bi bi-plus-square"></i>
                                    </a> &nbsp;
                                    <a asp-action="CancellInvitaion" asp-route-Id="item.Id" class="btn btn-outline-primary bg-gradient py-2">
                                        <i class="bi bi-dash-square"></i>
                                    </a>
                        </div>

                </div>                
        </div>

    </div>
}@*else
{
    <div class="row">
        <h6 class="text-center text-secondary">
            User not found
        </h6>
    </div>
    
}*@
